<idspace>
	<window xmlns:n="native" xmlns:x="xhtml" xmlns:zk="zk" apply="org.zkoss.bind.BindComposer"
		id="wdn" border="normal" title="Danh sách giao việc" mode="modal" action="show: slideIn" class="tcx-modal pop-up-width1 reset-width"
		closable="true" viewModel="@id('vm') @init('vn.toancauxanh.service.GiaoViecService')">
		 <zscript>
		 	<![CDATA[
				vn.toancauxanh.model.DuAn duAn = arg.get("vm");
				vmArgs = arg.get("vmArgs");
				vm.arg.put("idDuAn", duAn.getId());
		 	]]>
		 </zscript>
		<div class="w-popup-content-medium">
		<div class="panel-box">
			<div zclass="row mg-and-bg-and-line">
				<div zclass="col-md-12">
					<listbox id="listbox" multiple="true" checkmark="true" model="@load(vm.page(vm.targetQueryByIdDuAnNotHoanThanh).fetch())" emptyMessage="Không có dữ liệu nào trong danh sách">
						<listhead>
							<listheader label="" width="50px"></listheader>
							<listheader label="STT"></listheader>
							<listheader label="Tên công việc"></listheader>
							<listheader label="Người được giao"></listheader>
							<listheader label="Ngày giao"></listheader>
							<listheader label="Hạn thực hiện"></listheader>
							<listheader label="Trạng thái"></listheader>
						</listhead>
						<template name="model">
							<listitem>
								<listcell label=""></listcell>
								<listcell label="@bind(forEachStatus.index + 1 + vm.arg.page * vm.arg.pagesize)"></listcell>
								<listcell label="@load(each.tenCongViec)"></listcell>
								<listcell label="@load(each.nguoiDuocGiao.hoVaTen)"></listcell>
								<listcell label="@load(each.ngayGiao)"></listcell>
								<listcell label="@load(each.hanThucHien)"></listcell>
								<listcell label="@load(each.trangThaiGiaoViec.text)"></listcell>
							</listitem>
						</template>
					</listbox>
					<paging pageSize="@load(vm.arg.pagesize)" totalSize="@load(vm.targetQueryByIdDuAn.fetchCount())" mold="os"
						visible="@load(vm.targetQueryByIdDuAn.fetchCount() > vm.arg.pagesize ? true : false)"
						activePage="@bind(vm.arg.page)" onPaging="@command('cmd', notify=vm, atr='targetQueryByIdDuAn')" />
				</div>
			</div>
			<div class="row mg-and-bg-and-line">
				<div zclass="col-xs-6">
					<div zclass="form-group">
						<x:button class="btn bg-btn-dong btn-grey" onClick="@command('closePopup', wdn=wdn, vm = vm)">
							<x:image class="img-title" src="${contexPath}/assets/icon-bxtdn/dong.svg"/>
							<span>Đóng</span>
						</x:button>
					</div>
				</div>
				<div zclass="col-xs-6">
					<div zclass="form-group right">
						<x:button if="${entry.quyen.quanlyduan_giaoviec}" onClick="@command('redirectPage',zul='quanlyduan/add-giao-viec.zul', vm = duAn, vmArgs = vm)"
								class="btn btn-base btn-green mg-btn">
							<x:image class="img-title" src="${contexPath}/assets/icon-bxtdn/them-moi.svg"/>
							<span>Giao việc</span>
						</x:button>
					</div>
				</div>
			</div>
		</div>
	</div>
	</window>
</idspace>